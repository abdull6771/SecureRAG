# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model Settings
MODEL_NAME=gpt-4o
TEMPERATURE=0.0

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
K_RETRIEVAL=3

# Paths
VECTOR_STORE_PATH=faiss_index
DOCS_PATH=./documents

# API Settings (for FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Redis Configuration (for conversation memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
API_KEY=your-api-key-for-authentication
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Guardrails
ENABLE_TOXICITY_CHECK=true
ENABLE_PII_DETECTION=true
MAX_RETRIES=3
